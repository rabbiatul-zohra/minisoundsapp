<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/killed_screen_padding"
    android:gravity="center"
    android:layout_gravity="center">

    <ImageView
        android:src="@drawable/content_error_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"/>

    <TextView
        android:id="@+id/app_killed_title"
        style="@style/appkilled_error_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/app_killed_message"
        style="@style/appkilled_error_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/content_unavailable"
        tools:text="This app is currently unavailable"/>

    <TextView
        android:clickable="true"
        android:id="@+id/url_link_message"
        style="@style/page_error_retry_link_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more_info"
        android:textAlignment="center"
        android:focusable="true"
        android:gravity="center_horizontal" />

</LinearLayout>